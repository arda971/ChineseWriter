<Window x:Class="ChineseWriter.ChineseWriterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chinese Writer" SizeToContent="WidthAndHeight" Background="#FFBDBDFF" Loaded="Window_Loaded">
    <Window.Resources>
        <Style x:Key="WidgetStyle" TargetType="FrameworkElement">
            <Setter Property="Margin" Value="2"/>
        </Style>
        <Style x:Key="ButtonStyle" TargetType="Button" BasedOn="{StaticResource WidgetStyle}">
            <Setter Property="Padding" Value="16,0,16,0"/>            
        </Style>
        <Style x:Key="PinyinStyle" TargetType="Control" BasedOn="{StaticResource WidgetStyle}">
            <Setter Property="FontFamily" Value="Times New Roman"/>
            <Setter Property="FontSize" Value="18"/>
        </Style>
    </Window.Resources>
    <StackPanel Orientation="Vertical" Margin="8">
        <StackPanel Orientation="Horizontal" Name="Buttons">
            <Button Style="{StaticResource ButtonStyle}" 
                    Click="Clear_Text_Click">C_lear text</Button>
            <Button Click="Copy_Chinese_Click" Style="{StaticResource ButtonStyle}">_Copy Chinese</Button>
            <CheckBox Grid.Row="0" Grid.Column="0" Name="ShowEnglish" Focusable="False" IsChecked="False" VerticalAlignment="Center"
                          Style="{StaticResource WidgetStyle}">_English</CheckBox>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal" Name="Characters" Style="{StaticResource WidgetStyle}"/>
        <!--                   -->
        <Border Grid.Column="1" Grid.Row="1" BorderThickness="1" BorderBrush="Black" Style="{StaticResource WidgetStyle}">
            <Grid Name="Suggestions">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Name="NumberColumn" Width="Auto"/>
                    <ColumnDefinition Name="PinyinColumn" Width="Auto"/>
                    <ColumnDefinition Name="HanyiColumn" Width="Auto"/>
                    <ColumnDefinition Name="EnglishColumn" Width="*"/>
                </Grid.ColumnDefinitions>
            </Grid>
        </Border>
    </StackPanel>
</Window>
