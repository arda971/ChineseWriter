<Window x:Class="ChineseWriter.InputDialog" FontSize="14"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InputDialog" SizeToContent="WidthAndHeight"  >
    <StackPanel Orientation="Vertical">
        <Label Name="PromptLabel">Please give value</Label>
        <TextBox Name="InputBox" MinWidth="300" Margin="4" Padding="4" HorizontalAlignment="Stretch"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Margin="4" Padding="8,4,8,4" IsDefault="True" Click="Ok_Click">OK</Button>
            <Button Margin="4" Padding="8,4,8,4" IsCancel="True">Cancel</Button>
        </StackPanel>
    </StackPanel>
</Window>
